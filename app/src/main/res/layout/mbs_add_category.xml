<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/newCategoryName"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnCreateCategory"
        android:hint="Liste AdÄ±"
        android:textSize="26sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateCategory"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="52dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/newCategoryName"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#fff"
        android:backgroundTint="@color/colorAccentOpen"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/colorPrimaryDark"
        app:cornerRadius="100dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>