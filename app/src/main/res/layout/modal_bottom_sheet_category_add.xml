<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/newCategoryName"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnCreateCategory"
        android:hint="@string/ui_category_add_hint"
        android:inputType="text"
        android:textSize="@dimen/font_high"
        android:nextFocusDown="@id/btnCreateCategory"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnCreateCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/newCategoryName"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_add_done"
        android:background="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>