<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/txtEditCategoryName"
        android:layout_width="210dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnEditCategory"
        android:hint="List New Name"
        android:textSize="20sp"
        android:inputType="text"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnEditCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txtEditCategoryName"
        app:layout_constraintRight_toLeftOf="@id/btnDeleteCategory"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_check_done"
        android:background="@null"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnDeleteCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnEditCategory"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_delete"
        android:background="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>